<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Bean post processor to persist created beans -->  
  <bean class="agentspring.graphdb.PersistingBeanPostProcessor"/>

  <!--  Agents -->
  <bean id="winter" class="polep.domain.agent.polepAgent" p:name="Winter" p:cash="20"/>
  <bean id="summer" class="polep.domain.agent.polepAgent" p:name="Summer" p:cash="30"/>
  <bean id="autumn" class="polep.domain.agent.polepAgent" p:name="Autumn" p:cash="100"/>
  <bean id="spring" class="polep.domain.agent.polepAgent" p:name="Spring" p:cash="30"/>
  
  <!--  Stuff  -->
  <bean id="coal"       class="polep.domain.things.Stuff" p:name="Coal" p:price="0.7"/>
  <bean id="biomass"    class="polep.domain.things.Stuff" p:name="Biomass" p:price="0.5"/>
  <bean id="co2"        class="polep.domain.things.Stuff" p:name="Co2" p:price="0.2"/>
  
</beans>
